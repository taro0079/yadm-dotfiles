{
    "$schema": "https://opencode.ai/config.json",
    "plugin": ["opencode-gemini-auth@latest"],
    "agent": {
        "build": {
            "mode": "primary",
            "prompt": "日本語で記述、作成してください",
            "tools": {
                "read": true,
                "write": true,
                "edit": true,
                "bash": true,
                "grep": true,
                "glob": true,
                "list": true,
                "webfetch": true,
                "patch": true,
                "todoread": true,
                "todowrite": true
            }
        }
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "gpt-oss:20b": {
                    "name": "gpt-oss:20b"
                }
            }
        }
    }
}
